<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/statusMessageImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_gravity="center"
        android:tint="@color/message_highlight_color"/>

    <TextView
        android:id="@+id/statusMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_for_images_status_hint"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/message_highlight_color"/>

</LinearLayout>